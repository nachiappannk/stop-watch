<Window x:Class="StopWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StopWatch"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Stop Watch" Height="70" Width="270">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,4">
            <Button Content="Start" Margin="4,0" Click="OnStart" Width="40" Height="20"/>
            <Button Content="Pause" Margin="4,0" Click="OnStop" Width="40" Height="20"/>
            <Button Content="Clear" Margin="4,0" Click="OnClear" Width="40" Height="20"/>
        </StackPanel>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="time" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Text="22.22.11.222"/>
        </Grid>
    </DockPanel>
</Window>
